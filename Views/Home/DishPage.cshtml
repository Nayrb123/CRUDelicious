@using CRUDelicious2.Models
@model Dishes
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <style>
            h1 {
                text-align: center;
                margin: 20px;
            }
            h2 {
                text-align: center;
            }
            .dish_container {
                width: 600px;
                height: 500px;
                margin-left: 30px;
            }
            body {
                    background-color: #deefee;
                 }
        </style>
    </head>
<body>

<h1>@ViewBag.dishpage[0].Name</h1>
<h2>@ViewBag.dishpage[0].Chef</h2>
<hr>
<div class="dish_container">
    <h4><a href="/">Home</a></h4>
    <h4>@ViewBag.dishpage[0].Description</h4>
    <h5>Calories: @ViewBag.dishpage[0].Calories</h5>
    <h5>Tastiness: @ViewBag.dishpage[0].Tastiness</h5>

    <a href="/delete/@ViewBag.dishpage[0].id"><button class="btn btn-danger">Delete</a></button><a href="/edit/@ViewBag.dishpage[0].id"><button class="btn btn-secondary">Edit</button></a>
</div>
</body>

</html>